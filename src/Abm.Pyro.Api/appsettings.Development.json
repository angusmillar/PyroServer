{
  "spring": {
    "cloud": {
      "config": {
        "enabled": false
      }
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithEnvironmentName"
    ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./application-.log",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "EventCollector",
        "Args": {
          "splunkHost": "https://splunkHost.com:8088/services/collector/event",
          "eventCollectorToken": "3f089b7f-e69d-42ba-85a5-4ca98ce4adbd",
          "source": "Abm:Pyro",
          "sourceType": "Abm:Pyro:Api"
        }
      }
    ],
    "Properties": {
      "Application": "Abm.Pyro.Api"
    }
  },
  "Implementation": {
    "Name": "PyroServer",
    "Title": "Pyro Server",
    "Description": "Pyro FHIR Server"
  },
  "Database": {
    "ConnectionString": "[Secrets]"
  },
  "ServiceBaseUrl": {
    "Url": "https://localhost:7081"
  },
  "ServiceDefaultTimeZone": {
    "TimeZoneTimeSpan": "10:00:00"
  },
  "Pagination": {
    "DefaultNumberOfRecordsPerPage": 30,
    "MaximumNumberOfRecordsPerPage": 100
  },
  "IncludeRevInclude": {
    "MaximumIterations": 10,
    "MaximumIncludeResources": 100
  },
  "Indexing": {
    "RemoveHistoricResourceIndexesOnUpdateOrDelete": true
  },
  "ResourceEndpointPolicies": {
    "DefaultPolicy": "AllowAll",
    "Enforce": [
      {
        "UponEndpoints": [
          "Basic"
        ],
        "Policies": [
          "CreateOnly"
        ]
      }
    ],
    "Policies": [
      {
        "PolicyCode": "AllowAll",
        "PolicyDescription": "A policy that allow all the use of all endpoint capabilities",
        "AllowCreate": true,
        "AllowRead": true,
        "AllowUpdate": true,
        "AllowDelete": true,
        "AllowSearch": true,
        "AllowVersionRead": true,
        "AllowHistory": true,
        "AllowConditionalCreate": true,
        "AllowConditionalUpdate": true,
        "AllowConditionalDelete": true,
        "AllowBaseTransaction": true,
        "AllowBaseBatch": true,
        "AllowBaseMetadata": true,
        "AllowBaseHistory": true
      },
      {
        "PolicyCode": "CreateOnly",
        "PolicyDescription": "A policy that only allows Reading and Searching",
        "AllowCreate": true,
        "AllowRead": false,
        "AllowUpdate": false,
        "AllowDelete": false,
        "AllowSearch": false,
        "AllowVersionRead": false,
        "AllowHistory": false,
        "AllowConditionalCreate": false,
        "AllowConditionalUpdate": false,
        "AllowConditionalDelete": false,
        "AllowBaseTransaction": false,
        "AllowBaseBatch": false,
        "AllowBaseMetadata": false,
        "AllowBaseHistory": false
      }
    ]
  }
}
